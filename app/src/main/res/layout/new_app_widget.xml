<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.AppWidgetProject.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppWidgetProject.AppWidgetContainer">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        style="@style/AppWidgetSection">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/appwidget_id_label"
            android:text="@string/widget_id"
            android:layout_weight="2"
            style="@style/AppWidgetLabel">

        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/appwidget_id"
            android:layout_weight="1"
            android:text="XX"
            style="@style/AppWidgetText">

        </TextView>

    </LinearLayout>

    <LinearLayout
        style="@android:/AppWidgetSection"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_id"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/appwidget_update_label"
            style="@style/AppWidgetLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Last updated"
            android:textColor="@color/white">

        </TextView>

        <TextView
            android:id="@+id/appwidget_update"
            style="@style/AppWidgetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/date_count_format"
            android:textColor="@color/white">

        </TextView>

        <Button
            android:id="@+id/button_update"
            style="@style/AppWidgetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update now">

        </Button>


    </LinearLayout>

</RelativeLayout>